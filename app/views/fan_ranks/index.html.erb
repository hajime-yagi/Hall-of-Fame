<% content_for(:title, 'ファンランキング') %>
<div class="rank">
  <h1><%= current_user.favorite_team_i18n %>ファンランキング</h1>
  </div>
  <font color="white">
  <%= link_to '球団別ポイント表',team_rank_path,class: "btn btn-flat1 team-rank1" %>
  <%= link_to '個人順位',rank_path ,class: "btn btn-flat fan-rank1" %>
  </font>
  <table class="table-condensed" > 
      <thead>
      <tr>
      <th scope="col">順位</th>
      <th scope="col">ユーザーネーム</th>
      <th scope="col">ポイント数</th>
    </tr>
  </thead>
  <tbody>
  <thead>
      <tr>
      <% @user.each.with_index(1) do |r,i| %>
        <td>  第 <%= i %> 位 </td>
        <td><%= r.name %></td>
        <td><%= r.point %></td>
        </tr>
        <% end %>
        </thead>
     </tbody>
    </table>
    </style>
<div class="rank">
</div>