<% content_for(:title, 'マイページ') %>
<div class="container pt-3">
   <div class="row">
     <div class="col-md-10 offset-md-1">
       <h1 class="float-left mb-5"><%= "マイページ" %></h1>
       <table class="table">
         <tr>
         <th scope="row"><%= "ユーザーネーム" %></th>
           <td><%= current_user.name %></td>
         </tr>
         <tr>
         <th scope="row"><%= "Eメール" %></th>
         <td><%= current_user.email %></td>
         </tr>
         <tr>
         <th scope="row"><%= "推し球団" %></th>
         <td><%= current_user.favorite_team %></td>
         </tr>
         <tr>
          <th scope="row">アバター</th>
          <% if current_user.avatar.present? %>
          <td><%= image_tag current_user.avatar.url, class: 'rounded-circle mr15', width: '40px', height: '40px' %></td>

         <% else %>
            <td><%= image_tag 'player.jpg', class: 'rounded-circle mr15', width: '40px', height: '40px' %></td>
         <% end %>

        </tr>
         <tr>
         <th scope="row"><%= "一言" %></th>
         <td><%=  current_user.introduction %></td>
         </tr>
       </table>
       <%= link_to "編集", edit_profile_path, class: 'btn btn-success float-right' %>
       
     
 <h1 class="float-left mb-5"><%= "予想履歴" %></h1>
<table class="table table-condensed">
  <thead>
    <tr>
      <th scope="col">ユーザーネーム</th>
      <th scope="col">試合</th>
      <th scope="col">予想スコア</th>
    </tr>
  </thead>
  <tbody>
    <tr>
  <% @my_expects.each do |e| %>
      <td><%= e.user.name %></td>
      <td><%= e.game.team_a %>-<%= e.game.team_b %></td>
      <td><%= e.home_score %>-<%= e.away_score %></td>
      <% if !g.match_time.nil? %>
      <td><%= link_to "編集",  edit_game_expect_path(e.game_id,id: e.id) %></td>
     <% end %>
     <% end %>
     </tr>
     
  </tbody>
</table>
   </div>
 </div>
 