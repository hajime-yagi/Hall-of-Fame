<%= form_with model:@contact, url:contact_thanks_path do |f| %>
  <div class="page-header">
    <h1>お問い合わせ</h1>
  </div>
 
  <% if @contact.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @contact.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <table class="table">
    <tr>
      <th>名前<span class="text-danger">（必須）</span></th>
      <td><%= f.text_field :name, class: 'form-control' %></td>
    </tr>
    <tr>
      <th>メールアドレス<span class="text-danger">（必須）</span></th>
      <td><%= f.email_field :email , class: 'form-control' %></td>
    </tr>
    <tr>
      <th>用件<span class="text-danger">（必須）</span></th>
      <td><%= f.text_field :subject , class: 'form-control' %></td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td><%= f.text_area :message , class: 'form-control' %></td>
    </tr>
  </table>
  <div class="send" >
  <%= f.submit '送信', class: 'cp_button13' %>
  </div>
<% end %>
